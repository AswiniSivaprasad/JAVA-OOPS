package com.kodnest.Javaopps.InstanceBlock;

public class Demo {
	
	//Instance Variable
	int a = 100;
	
	//Static Block-1
	{
		System.out.println("Instance Block-1 is executed");
		a = 9;
	}
	
	//Static Block-2
	{
		System.out.println("Instance Block-2 is executed");
		a = 99;
	}
	
	//Static Block-3
	{
		System.out.println("Instance Block-3 is executed");
		a = 999;
	}
	
	void display() {
		System.out.println("A = " +a);
	}
	
	//Constructor
	public Demo() {
		System.out.println("Constructor is executed");
		a = 200;
	}
	
	//Static variable
	static int b;
	
	//Static Block-1
	static {
		System.out.println("Static Block-1 is executed");
		b = 300;
	}
	
	//Static Block-2
	static {
		System.out.println("Static Block-2 is executed");
		b = 400;
	}
	
	//Static Block-3
	static {
		System.out.println("Static Block-3 is executed");
		b = 500;
	}
	
	static void show() {
		System.out.println("B = " +b);
	}
}
